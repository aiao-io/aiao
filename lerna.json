{
  "npmClient": "yarn",
  "packages": ["libs/*", "apps/*", "integration/*"],
  "version": "independent",
  "ignoreChanges": ["apps/**", "integration/**", "**/*.md"],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master", "develop"],
      "ignoreChanges": ["ignored-file", "*.md"]
    }
  }
}
