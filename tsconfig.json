{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@aiao/util": ["libs/util/src/index.ts"],
      "@aiao/lazy-component": ["libs/lazy-component/src/index.ts"],
      "@aiao/lazy-module": ["libs/lazy-module/src/index.ts"],
      "@aiao/lazy-element": ["libs/lazy-element/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "**/*.stories.ts"]
}
