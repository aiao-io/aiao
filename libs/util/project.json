{
  "projectType": "library",
  "root": "libs/util",
  "sourceRoot": "libs/util/src",
  "architect": {
    "build": {
      "builder": "@nrwl/angular:package",
      "options": { "tsConfig": "libs/util/tsconfig.lib.json", "project": "libs/util/ng-package.json" },
      "configurations": { "production": { "tsConfig": "libs/util/tsconfig.lib.prod.json" } }
    },
    "lint": {
      "builder": "@nrwl/linter:eslint",
      "options": { "lintFilePatterns": ["libs/util/src/**/*.ts", "libs/util/src/**/*.html"] },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "builder": "@nrwl/jest:jest",
      "options": { "jestConfig": "libs/util/jest.config.js", "passWithNoTests": true },
      "outputs": ["coverage/libs/util"]
    }
  },
  "tags": ["all"]
}
